{
    "compilerOptions": {
        "module": "es2015",
        "target": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "outDir": "dist",
        "preserveConstEnums": false,
        "strictNullChecks": true,
        "declaration": true,
        "declarationDir": "types",
        "forceConsistentCasingInFileNames": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "lib": [
            "dom",
            "dom.iterable",
            "es2015"
        ]
    },
    "include": [
        "src/**/*.ts",
        "temp/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "test",
        "example",
        "bin",
        "dist",
        "types"
    ]
}