        "module": "commonjs",
        "target": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "baseUrl": "../../",
        "outDir": "./bin",
        "skipDefaultLibCheck": true,
        "forceConsistentCasingInFileNames": true
